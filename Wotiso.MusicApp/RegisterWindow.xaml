<Window x:Class="Wotiso.MusicApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register"
        Height="500" Width="380"
        Background="#0d0d1a"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="18" Background="#0d0d1a" Padding="25">
        <StackPanel>

            <TextBlock Text="ðŸŽ§ Account Register"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#4ecca3"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <TextBlock Text="User name" Foreground="#cccccc"/>
            <TextBox x:Name="NameText"
                     Background="#1a1a2e"
                     Foreground="White"
                     BorderBrush="#4ecca3"
                     Padding="10"
                     Margin="0,5,0,14"/>

            <TextBlock Text="Email" Foreground="#cccccc"/>
            <TextBox x:Name="EmailText"
                     Background="#1a1a2e"
                     Foreground="White"
                     BorderBrush="#4ecca3"
                     Padding="10"
                     Margin="0,5,0,14"/>

            <TextBlock Text="Password" Foreground="#cccccc"/>
            <PasswordBox x:Name="PasswordText"
                         Background="#1a1a2e"
                         Foreground="White"
                         BorderBrush="#4ecca3"
                         Padding="10"
                         Margin="0,5,0,25"/>
            <TextBlock Text="Confirm Password" Foreground="#cccccc"/>
            <PasswordBox x:Name="ConfirmPasswordText"
             Background="#1a1a2e"
             Foreground="White"
             BorderBrush="#4ecca3"
             Padding="10"
             Margin="0,5,0,25"/>


            <Button Content="Sign up"
                    Height="46"
                    Background="#e94560"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="Register_Click"/>

            <Button Content="Return to Login page"
                    Height="38"
                    Margin="0,12,0,0"
                    Background="Transparent"
                    Foreground="#4ecca3"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Close_Click"/>
        </StackPanel>
    </Border>
</Window>
