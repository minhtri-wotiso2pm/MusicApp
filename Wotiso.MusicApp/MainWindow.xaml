<Window x:Class="Wotiso.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player" Height="700" Width="950"
        Background="#0d0d1a"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" 
                         Color="#000000" 
                         BlurRadius="20" 
                         ShadowDepth="0" 
                         Opacity="0.4"/>

        <!-- Glow Effect -->
        <DropShadowEffect x:Key="GlowEffect" 
                         Color="#e94560" 
                         BlurRadius="15" 
                         ShadowDepth="0" 
                         Opacity="0.6"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#e94560" Offset="0"/>
                        <GradientStop Color="#ff6b7a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="18,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" 
                                Padding="18,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control Button Style (Play/Pause/etc) -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e94560" Offset="0"/>
                                            <GradientStop Color="#ff6b7a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#f1f1f1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Repeat Button for Slider (Must be defined before Slider) -->
        <Style x:Key="RepeatButtonTransparent" TargetType="RepeatButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Slider Style (Simplified) -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <!-- Background Track -->
                            <Border Height="6" 
                                    Background="#2a2a3e" 
                                    CornerRadius="3"
                                    VerticalAlignment="Center"/>

                            <!-- Track with Thumb -->
                            <Track x:Name="PART_Track" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Style>
                                            <Style TargetType="RepeatButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Height="6" 
                                                                    CornerRadius="3"
                                                                    Background="#e94560"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" 
                                                Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Ellipse Fill="#e94560" 
                                                                    Stroke="White" 
                                                                    StrokeThickness="2"
                                                                    Width="16" 
                                                                    Height="16"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Window Border with Rounded Corners -->
    <Border CornerRadius="0" 
            Background="#0d0d1a" 
            BorderBrush="#0d0d1a" 
            BorderThickness="1"
            Effect="{StaticResource CardShadow}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,25" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="12" Height="12" Fill="#4ecca3" Margin="0,0,12,0"/>
                    <TextBlock Text="MUSIC PLAYER" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Border Background="#e94560" 
                            CornerRadius="4" 
                            Padding="8,2" 
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="VIP PRO" 
                                  FontSize="10" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="─" 
                            Width="55" 
                            Height="44" 
                            Click="Minimize_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0"/>
                    <Button x:Name="MaximizeButton"
                            Content="▢"
                            Width="55" Height="44"
                            Click="MaximizeRestore_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0"/>
                    <Button Content="✕" 
                            Width="55" 
                            Height="44" 
                            Click="Close_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="📁  Add Songs" 
                            Width="140" 
                            Click="SelectFiles_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="🗑  Delete" 
                            Width="110" 
                            Click="Delete_Click" 
                            Margin="12,0,0,0"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button x:Name="LoopButton"
                            Content="🔁  Loop" 
                            Width="132" 
                            Click="Loop_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"/>
                    <Button x:Name="ShuffleButton"
                            Content="🔀  Shuffle" 
                            Width="145" 
                            Click="Shuffle_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Grid>

            <!-- Playlist Card -->
            <Border Grid.Row="2" 
                    Background="#16213e" 
                    CornerRadius="15" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Playlist Header -->
                    <Border Background="#1a1a2e" CornerRadius="15,15,0,0" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Tiêu đề + Song Count -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📋" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="YOUR PLAYLIST" FontSize="14" FontWeight="Bold" Foreground="#4ecca3" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SongCountLabel"
                   Text="0 songs"
                   Foreground="#4ecca3"
                   FontSize="12"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Ô tìm kiếm -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                <Grid Width="220" Height="36" Margin="0,0,10,0">
                                    <TextBox x:Name="SearchBox"
                     VerticalContentAlignment="Center"
                     Padding="10,0"
                     Foreground="White"
                     Background="#1a1a2e"
                     BorderBrush="#e94560"
                     BorderThickness="1"
                     TextChanged="SearchBox_TextChanged"/>
                                    <TextBlock x:Name="PlaceholderText"
                       Text="Search song..."
                       Foreground="#808080"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Danh sách bài hát -->
                    <ListBox x:Name="SongList"
                 Grid.Row="1"
                 Style="{StaticResource ModernListBox}"
                 DisplayMemberPath="Title"
                 SelectionChanged="SongList_SelectionChanged"
                 Padding="15,10">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image x:Name="CDDisk"
                                               Width="50"
                                               Height="50"
                                               Margin="0,0,10,0"
                                               Source="/Wotiso.MusicApp;component/Assets/cd.png"
                                               RenderTransformOrigin="0.5,0.5">
                                                        <Image.RenderTransform>
                                                            <RotateTransform x:Name="CDRotateTransform" Angle="0"/>
                                                        </Image.RenderTransform>
                                                    </Image>
                                                    <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed">
                        <TextBlock Text="🎵" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="No songs in playlist" FontSize="16" Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="Click 'Add Songs' to get started" FontSize="12" Foreground="#606060" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Player Controls Card -->
            <Border Grid.Row="3" 
                    Background="#16213e" 
                    CornerRadius="15" 
                    Padding="25,20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Now Playing Info -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="NowPlayingLabel"
                                      Text="No song playing" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="Ready to play" 
                                      FontSize="12" 
                                      Foreground="#808080"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Progress Section -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Progress Bar -->
                        <Slider x:Name="ProgressSlider"
                               Grid.Row="0"
                               Minimum="0" 
                               Maximum="100"
                               Style="{StaticResource ModernSlider}"
                               Margin="0,0,0,8"/>

                        <!-- Time Labels -->
                        <Grid Grid.Row="1">
                            <TextBlock x:Name="CurrentTimeLabel" 
                                      Text="0:00" 
                                      Foreground="#4ecca3"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Left"/>
                            <TextBlock x:Name="TotalTimeLabel" 
                                      Text="0:00" 
                                      Foreground="#4ecca3"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>

                    <!-- Control Buttons & Volume -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Volume Control -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔊" 
                                      Grid.Column="0"
                                      FontSize="18" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,12,0"/>
                            <Slider x:Name="VolumeSlider" 
                                   Grid.Column="1"
                                   Minimum="0" 
                                   Maximum="1" 
                                   Value="0.5"
                                   Style="{StaticResource ModernSlider}"
                                   VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Playback Controls -->
                        <StackPanel Orientation="Horizontal" 
                                   Grid.Column="1"
                                   HorizontalAlignment="Center">
                            <Button Content="⏮" 
                                    Width="50" 
                                    Height="50" 
                                    FontSize="18"
                                    Click="Prev_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="5,0"/>
                            <Button x:Name="PlayButton"
                                    Content="▶" 
                                    Width="65" 
                                    Height="65" 
                                    Click="Play_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="10,0"
                                    FontSize="22"/>
                            <Button x:Name="PauseButton"
                                    Content="⏸" 
                                    Width="65" 
                                    Height="65" 
                                    Click="Pause_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="10,0"
                                    FontSize="22"
                                    Visibility="Collapsed"/>
                            <Button Content="⏭" 
                                    Width="50" 
                                    Height="50" 
                                    FontSize="18"
                                    Click="Next_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="5,0"/>
                        </StackPanel>

                        <!-- Equalizer Visualization (Placeholder) -->
                        <StackPanel Orientation="Horizontal" 
                                   Grid.Column="2"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center">
                            <Border Width="3" Height="20" Background="#4ecca3" CornerRadius="2" Margin="2,0" Opacity="0.7"/>
                            <Border Width="3" Height="30" Background="#4ecca3" CornerRadius="2" Margin="2,0" Opacity="0.8"/>
                            <Border Width="3" Height="25" Background="#4ecca3" CornerRadius="2" Margin="2,0" Opacity="0.6"/>
                            <Border Width="3" Height="35" Background="#4ecca3" CornerRadius="2" Margin="2,0" Opacity="0.9"/>
                            <Border Width="3" Height="20" Background="#4ecca3" CornerRadius="2" Margin="2,0" Opacity="0.5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Hidden MediaElement -->
            <MediaElement x:Name="mediaPlayer" 
                         LoadedBehavior="Manual" 
                         UnloadedBehavior="Stop" 
                         Visibility="Hidden" 
                         MediaEnded="MediaPlayer_MediaEnded"
                         MediaOpened="MediaPlayer_MediaOpened"/>
        </Grid>
    </Border>
</Window>