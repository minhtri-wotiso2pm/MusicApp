<Window x:Class="Wotiso.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player" Height="700" Width="950"
        Background="#0d0d1a"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="/unnamed.ico">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                         Color="#000000" 
                         BlurRadius="20" 
                         ShadowDepth="0" 
                         Opacity="0.4"/>

        <DropShadowEffect x:Key="GlowEffect" 
                         Color="#e94560" 
                         BlurRadius="15" 
                         ShadowDepth="0" 
                         Opacity="0.6"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#e94560" Offset="0"/>
                        <GradientStop Color="#ff6b7a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="18,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" 
                                Padding="18,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e94560" Offset="0"/>
                                            <GradientStop Color="#ff6b7a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#f1f1f1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        </Style>

        <Style x:Key="RepeatButtonTransparent" TargetType="RepeatButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Height="6" 
                                    Background="#2a2a3e" 
                                    CornerRadius="3"
                                    VerticalAlignment="Center"/>

                            <Track x:Name="PART_Track" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Style>
                                            <Style TargetType="RepeatButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Height="6" 
                                                                    CornerRadius="3"
                                                                    Background="#e94560"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </RepeatButton.Style>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" 
                                                Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Ellipse Fill="#e94560" 
                                                                    Stroke="White" 
                                                                    StrokeThickness="2"
                                                                    Width="16" 
                                                                    Height="16"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SIMPLIFIED PLAYLIST ITEM STYLE -->
        <Style x:Key="ModernPlaylistItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#c0c0c0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemBorder" 
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,0,1"
                                BorderBrush="#1a1a2e">
                            <TextBlock Text="{Binding PlaylistName}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a2e"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Foreground" Value="#ffffff"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0d0d1a"/>
                    <Setter Property="Foreground" Value="#4ecca3"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CREATE PLAYLIST BUTTON STYLE -->
        <Style x:Key="CreatePlaylistButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" 
                                Padding="15,12">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="➕" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Tạo Playlist Mới" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="0" 
            Background="#0d0d1a" 
            BorderBrush="#0d0d1a" 
            BorderThickness="1"
            Effect="{StaticResource CardShadow}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="12" Height="12" Fill="#4ecca3" Margin="0,0,12,0"/>
                    <TextBlock Text="MUSIC PLAYER" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <Border Background="#e94560" 
                            CornerRadius="4" 
                            Padding="8,2" 
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="VIP PRO" 
                                  FontSize="10" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="─" 
                            Width="55" 
                            Height="44" 
                            Click="Minimize_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0"/>
                    <Button x:Name="MaximizeButton"
                            Content="▢"
                            Width="55" Height="44"
                            Click="MaximizeRestore_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0"/>
                    <Button Content="✕" 
                            Width="55" 
                            Height="44" 
                            Click="Close_Click"
                            Style="{StaticResource SecondaryButton}"
                            BorderThickness="0"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="📁  Add Songs" 
                            Width="140" 
                            Click="SelectFiles_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="🗑  Delete" 
                            Width="110" 
                            Click="Delete_Click" 
                            Margin="12,0,0,0"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button x:Name="LoopButton"
                            Content="🔁  Loop" 
                            Width="132" 
                            Click="Loop_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"/>
                    <Button x:Name="ShuffleButton"
                            Content="🔀  Shuffle" 
                            Width="145" 
                            Click="Shuffle_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PLAYLIST PANEL (LEFT) - NEW DESIGN -->
                <Border Grid.Column="0" 
                        Background="#16213e" 
                        CornerRadius="15" 
                        Margin="0,0,10,0"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Playlist Header -->
                        <Border Background="#1a1a2e" CornerRadius="15,15,0,0" Padding="18,16">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📚" 
                                               FontSize="18" 
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="THƯ VIỆN" 
                                               FontSize="15" 
                                               FontWeight="Bold" 
                                               Foreground="#4ecca3"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Playlist Search Box -->
                        <Border Grid.Row="1" Background="#16213e" Padding="15,12,15,8">
                            <Border Background="#0d0d1a"
                                    CornerRadius="6"
                                    BorderBrush="#2a2e3e"
                                    BorderThickness="1">
                                <Grid>
                                    <TextBox x:Name="PlaylistSearchBox"
                                             Background="Transparent"
                                             Foreground="White"
                                             BorderThickness="0"
                                             Padding="12,8"
                                             FontSize="12"
                                             TextChanged="PlaylistSearchBox_TextChanged"/>
                                    <TextBlock x:Name="PlaylistSearchPlaceholder"
                                               Text="🔍 Tìm kiếm..."
                                               FontSize="12"
                                               Foreground="#606060"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center"
                                               Margin="14,0,0,0"
                                               Visibility="Visible"/>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- Playlist List -->
                        <ListBox x:Name="PlaylistList" 
                                 Grid.Row="2"
                                 Style="{StaticResource ModernListBox}"
                                 ItemContainerStyle="{StaticResource ModernPlaylistItem}"
                                 SelectionChanged="PlaylistList_SelectionChanged"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="True">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Xóa Playlist Này" 
                                              Click="DeletePlaylistMenuItem_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>

                        <!-- Create Playlist Button -->
                        <Border Grid.Row="3" 
                                Background="#16213e" 
                                CornerRadius="0,0,15,15" 
                                Padding="15,12,15,15"
                                BorderBrush="#2a2e3e"
                                BorderThickness="0,1,0,0">
                            <Button x:Name="CreatePlaylistButton"
                                    Style="{StaticResource CreatePlaylistButton}"
                                    Click="CreatePlaylist_Click"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- SONGS PANEL (RIGHT) -->
                <Border Grid.Column="1" 
                        Background="#16213e" 
                        CornerRadius="15" 
                        Margin="10,0,0,0"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Songs Header -->
                        <Border Background="#1a1a2e" CornerRadius="15,15,0,0" Padding="20,15">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="CurrentListTitle" 
                                               Text="Tất cả bài hát" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#4ecca3"/>
                                </StackPanel>
                                <TextBlock x:Name="SongCountLabel"
                                           Text="0 songs" 
                                           FontSize="12" 
                                           Foreground="#808080"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Song Search Box -->
                        <Border Grid.Row="1" Background="#1a1a2e" Padding="20,8">
                            <Grid>
                                <TextBox x:Name="SongSearchBox"
                                         Background="#0d0d1a"
                                         Foreground="White"
                                         BorderBrush="#e94560"
                                         BorderThickness="1"
                                         Padding="8"
                                         TextChanged="SongSearchBox_TextChanged"/>
                                <TextBlock x:Name="SongSearchPlaceholder"
                                           Text="🔍 Tìm bài hát..."
                                           Foreground="#808080"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"
                                           Visibility="Visible"/>
                            </Grid>
                        </Border>

                        <!-- Songs List -->
                        <ListBox x:Name="SongList" 
                                 Grid.Row="2"
                                 Style="{StaticResource ModernListBox}"
                                 DisplayMemberPath="Title"
                                 SelectionChanged="SongList_SelectionChanged"
                                 Padding="15,10">

                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Thêm vào Playlist..." x:Name="AddToPlaylistMenu">
                                    </MenuItem>
                                    <MenuItem Header="Xóa khỏi Playlist này" Click="RemoveFromPlaylist_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#e0e0e0"/>
                                    <Setter Property="Padding" Value="15,14"/>
                                    <Setter Property="Margin" Value="0,4"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Mini Album Disc - Rotating -->
                                                        <Grid Grid.Column="0" Width="35" Height="35" Margin="0,0,12,0">
                                                            <!-- Disc Background -->
                                                            <Ellipse Fill="#1a1a2e" Stroke="#4ecca3" StrokeThickness="1.5"/>

                                                            <!-- Disc with Rotation -->
                                                            <Ellipse Fill="#e94560" Opacity="0.3" Margin="7">
                                                                <Ellipse.RenderTransform>
                                                                    <RotateTransform x:Name="MiniDiscRotation" CenterX="10.5" CenterY="10.5" Angle="0"/>
                                                                </Ellipse.RenderTransform>
                                                            </Ellipse>

                                                            <!-- Center Hole -->
                                                            <Ellipse Fill="#0d0d1a" Width="8" Height="8"/>

                                                            <!-- Music Note Icon -->
                                                            <TextBlock Text="♪" FontSize="14" Foreground="#4ecca3" 
                                                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                      FontWeight="Bold"/>
                                                        </Grid>

                                                        <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- Trigger when item is selected - Start rotation animation -->
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard x:Name="RotationStoryboard">
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="MiniDiscRotation"
                                                                                   Storyboard.TargetProperty="Angle"
                                                                                   From="0" To="360"
                                                                                   Duration="0:0:10"
                                                                                   RepeatBehavior="Forever"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="RotationStoryboard"/>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1a1a2e"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#e94560" Offset="0"/>
                                                        <GradientStop Color="#ff6b7a" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyState" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                            <TextBlock Text="🎵" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No songs in list" FontSize="16" Foreground="#808080" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="Click 'Add Songs' to get started" FontSize="12" Foreground="#606060" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="3" 
                    Background="#16213e" 
                    CornerRadius="15" 
                    Padding="20,15"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Slider - Compact -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Now Playing Song Title -->
                        <TextBlock x:Name="NowPlayingTitle"
                                   Grid.Row="0"
                                   Text="♫ Chọn bài hát để phát"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="700">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#e94560" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <Slider x:Name="ProgressSlider"
                                Grid.Row="1"
                                Minimum="0" 
                                Maximum="100"
                                Style="{StaticResource ModernSlider}"
                                Margin="0,0,0,6"
                                ValueChanged="ProgressSlider_ValueChanged" 
                                PreviewMouseDown="ProgressSlider_PreviewMouseDown"
                                PreviewMouseUp="ProgressSlider_PreviewMouseUp"/>

                        <Grid Grid.Row="2">
                            <TextBlock x:Name="CurrentTimeLabel" 
                                      Text="0:00" 
                                      Foreground="#4ecca3"
                                      FontSize="10"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Left"/>
                            <TextBlock x:Name="TotalTimeLabel" 
                                      Text="0:00" 
                                      Foreground="#4ecca3"
                                      FontSize="10"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>

                    <!-- Controls - Compact -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Volume Control - Compact -->
                        <Grid Grid.Column="0" HorizontalAlignment="Left" Width="180">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔊" 
                                      Grid.Column="0"
                                      FontSize="16" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <Slider x:Name="VolumeSlider" 
                                   Grid.Column="1"
                                   Minimum="0" 
                                   Maximum="1" 
                                   Value="0.5"
                                   Style="{StaticResource ModernSlider}"
                                   VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Playback Controls - Center -->
                        <StackPanel Orientation="Horizontal" 
                                   Grid.Column="1"
                                   HorizontalAlignment="Center">
                            <Button Content="⏮" 
                                    Width="45" 
                                    Height="45" 
                                    FontSize="16"
                                    Click="Prev_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="4,0"/>
                            <Button x:Name="PlayButton"
                                    Content="▶" 
                                    Width="55" 
                                    Height="55" 
                                    Click="Play_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="8,0"
                                    FontSize="20"/>
                            <Button x:Name="PauseButton"
                                    Content="⏸" 
                                    Width="55" 
                                    Height="55" 
                                    Click="Pause_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="8,0"
                                    FontSize="20"
                                    Visibility="Collapsed"/>
                            <Button Content="⏭" 
                                    Width="45" 
                                    Height="45" 
                                    FontSize="16"
                                    Click="Next_Click" 
                                    Style="{StaticResource ControlButton}"
                                    Margin="4,0"/>
                        </StackPanel>

                        <!-- Visualizer - Animated Bars -->
                        <StackPanel Orientation="Horizontal" 
                                    Grid.Column="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="306,0,0,13">
                            <Border x:Name="VisualizerBar1" 
                                    Width="3" Height="18" 
                                    Background="#4ecca3" 
                                    CornerRadius="2" 
                                    Margin="2,0" 
                                    Opacity="0.7"
                                    RenderTransformOrigin="0.5,1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>

                            <Border x:Name="VisualizerBar2" 
                                    Width="3" Height="26" 
                                    Background="#4ecca3" 
                                    CornerRadius="2" 
                                    Margin="2,0" 
                                    Opacity="0.8"
                                    RenderTransformOrigin="0.5,1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>

                            <Border x:Name="VisualizerBar3" 
                                    Width="3" Height="22" 
                                    Background="#4ecca3" 
                                    CornerRadius="2" 
                                    Margin="2,0" 
                                    Opacity="0.6"
                                    RenderTransformOrigin="0.5,1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>

                            <Border x:Name="VisualizerBar4" 
                                    Width="3" Height="30" 
                                    Background="#4ecca3" 
                                    CornerRadius="2" 
                                    Margin="2,0" 
                                    Opacity="0.9"
                                    RenderTransformOrigin="0.5,1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>

                            <Border x:Name="VisualizerBar5" 
                                    Width="3" Height="18" 
                                    Background="#4ecca3" 
                                    CornerRadius="2" 
                                    Margin="2,0" 
                                    Opacity="0.5"
                                    RenderTransformOrigin="0.5,1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <MediaElement x:Name="mediaPlayer" 
                         LoadedBehavior="Manual" 
                         UnloadedBehavior="Stop" 
                         Visibility="Hidden" 
                         MediaEnded="MediaPlayer_MediaEnded"
                         MediaOpened="MediaPlayer_MediaOpened"/>
        </Grid>
    </Border>
</Window>